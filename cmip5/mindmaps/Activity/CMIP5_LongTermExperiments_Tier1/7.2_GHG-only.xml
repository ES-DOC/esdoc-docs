<?xml version="1.0" encoding="UTF-8"?>
<Experiment>
    <numericalActivityName>
        7.2::Simulation
    </numericalActivityName>
    <numericalActivityDescription>
        NaturalOnly
    </numericalActivityDescription>
    <Why>
        This is the Natural Only simulation for climate change detection and attribution. Relates to 3.2::Simulation
    </Why>
    <numericalExperiment>
        <CalendarType>
            <RealCalendar>
                1850-2005
            </RealCalendar>
        </CalendarType>
        <ensemble>
            False
        </ensemble>
        <requiredDuration>
            <ClosedDateRange>
                156 years
            </ClosedDateRange>
        </requiredDuration>
        <!--  CP doesn't know whether there is a formal way of describing 
               inital conditions other than naming the particular experiment 
               / simulation it was spawned from. -->
       <numericalRequirement xsi:type="InitialCondition">
                <description> All ModelComponents restart from 3.1::Control Year/Month/Day to be precise</description>
                <id xsi:type="Identifier"> 7.2.ic</id>
        </numericalRequirement>
        <numericalRequirement xsi:type="BoundaryCondition">
                <description>Impose changing atmospheric concentrations of well mixed gases including [CO2]</description>
                <id xsi:type="Identifier">7.2.bc.wmg </id>
        </numericalRequirement>
        <numericalRequirement xsi:type="BoundaryCondition">
                <description>Prescribed atmospheric concentration of short lived (reactive) gas species</description>
                <id xsi:type="Identifier">7.2.bc.sls </id>
        </numericalRequirement>
        <numericalRequirement xsi:type="BoundaryCondition">
                <description>Prescribed concentrations of natural aerosols</description>
                <id xsi:type="Identifier">7.2.bc.cna</id>
        </numericalRequirement>
        <numericalRequirement xsi:type="BoundaryCondition">
                <description>Prescribed concentrations of natural aerosol precursors</description>
                <id xsi:type="Identifier">7.2.bc.cnap</id>
        </numericalRequirement>
        <numericalRequirement xsi:type="BoundaryCondition">
            <description>Prescribed concentrations of short lived (reactive) aerosol species</description>
            <id xsi:type="Identifier">7.2.bc.csla</id>
        </numericalRequirement>
        <numericalRequirement xsi:type="BoundaryCondition">
                <description>Prescribed emissions of natural aerosols</description>
                <id xsi:type="Identifier">7.2.bc.ena</id>
        </numericalRequirement>
        <numericalRequirement xsi:type="BoundaryCondition">
                <description>Prescribed emissions of natural aerosol precursors</description>
                <id xsi:type="Identifier">7.2.bc.enap</id>
        </numericalRequirement>
        <numericalRequirement xsi:type="BoundaryCondition">
            <description>Prescribed emissions of short lived (reactive) aerosol species</description>
            <id xsi:type="Identifier">7.2.bc.esla</id>
        </numericalRequirement>
        <numericalRequirement xsi:type="BoundaryCondition">
				<description>Prescribed solar forcing</description>
				<id xsi:type="Identifier">7.2-L.bc.sf></id>
        </numericalRequirement>
        <numericalRequirement xsi:type="BoundaryCondition">
                <description>Prescribed Land Use</description>
                <id xsi:type="Identifier">7.2.bc.LandUse</id>
        </numericalRequirement>                   
   
   
   
   
    </numericalExperiment>   
</Experiment>