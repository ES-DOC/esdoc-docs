      <id xsi:type="Identifier">6.7c.bc.solar</id>
    </numericalRequirement>           
    <numericalRequirement xsi:type="BoundaryCondition">
		<description> Imposed uniform 4K increase in SSTs on the control experiment 6.7a</description>
		<id xsi:type="Identifier">6.7c.bc.4CO2</id>
	</numericalRequirement>
		
