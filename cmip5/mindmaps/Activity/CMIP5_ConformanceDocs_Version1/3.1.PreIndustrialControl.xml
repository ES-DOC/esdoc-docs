<?xml version="1.0" encoding="UTF-8"?>
<numericalExperiment documentVersion="2" control="true"
    xmlns="http://www.metaforclimate.eu/cim/1.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.metaforclimate.eu/cim/1.1 C:\Users\clp73\Desktop\Metafor\subversion\CIM\branches\dev0p3\activity.xsd"
    xmlns:xlink="http://www.w3.org/1999/xlink" 
    xmlns:gmd="http://www.isotc211.org/2005/gmd"
    xmlns:gco="http://www.isotc211.org/2005/gco">
    <rationale>Pre-Industrial coupled atmosphere ocean control run. 
        Imposes non-evolving pre-industrial conditions</rationale>
    <Why>This is the main CMIP5 control experiment against which perturbations
    are compared</Why>
    
    <!-- Initial Conditions -->
    <numericalRequirement xsi:type="InitialCondition">
        <description>
            A description of initial condition for the control run.
        </description>
        <id xsi:type="Identifier">3.1.ic</id>
    </numericalRequirement>

    <!-- Boundary Conditions -->
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Prescribed atmospheric concentrations of well mixed gases: excluding CO2</description>
        <id xsi:type="Identifier">3.1.bc.wmg.conc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Prescribed atmospheric concentrations of well mixed gas: Carbon Dioxide</description>
        <id xsi:type="Identifier">3.1.bc.CO2.conc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Prescribed atmospheric concentration of short lived (reactive) gas
            species</description>
        <id xsi:type="Identifier">3.1.bc.sls.conc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Prescribed concentrations of natural aerosols</description>
        <id xsi:type="Identifier">3.1.bc.nat_aer.conc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Prescribed concentrations of natural aerosol precursors</description>
        <id xsi:type="Identifier">3.1.bc.nat_aer_precur.conc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Prescribed concentrations of short lived (reactive) aerosol
            species</description>
        <id xsi:type="Identifier">3.1.bc.sl_aer.conc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Prescribed emissions of natural aerosols</description>
        <id xsi:type="Identifier">3.1.bc.nat_aer.em</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Prescribed emissions of natural aerosol precursors</description>
        <id xsi:type="Identifier">3.1.bc.nat_aer_precur.em</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Prescribed emissions of short lived (reactive) aerosol species</description>
        <id xsi:type="Identifier">3.1.bc.sl_aer.em</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Unperturbed Land Use</description>
        <id xsi:type="Identifier">3.1.bc.LandUse</id>
    </numericalRequirement>
    
    <CalendarType>
        <perpetualPeriod>
            <range>1850</range>
        </perpetualPeriod>
    </CalendarType>
    <requiredDuration xsi:type="ClosedDateRange">
        <startDate>1850-01-01T00:00:00Z</startDate>
        <endDate>1850-30-12T00:00:00Z</endDate>
        <lengthYears>500</lengthYears>
    </requiredDuration>
    <author>Charlotte Pascoe</author>
    <creationDate>2009-06-26T10:14:00Z</creationDate>
    <documentID xsi:type="Identifier">
        3.1_pi-control
    </documentID>
    
</numericalExperiment>
