<numericalExperiment documentVersion="2" control="false"
    xmlns="http://www.metaforclimate.eu/cim/1.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.metaforclimate.eu/cim/1.1 C:\Users\clp73\Desktop\Metafor\subversion\CIM\branches\dev0p3\activity.xsd"
    xmlns:xlink="http://www.w3.org/1999/xlink" 
    xmlns:gmd="http://www.isotc211.org/2005/gmd"
    xmlns:gco="http://www.isotc211.org/2005/gco">

    <rationale> Future projection (2006-2100) forced by RCP4.5.
        RCP4.5 is a representative concentration pathway which approximately results in a radiative 
        forcing of 4.5 W m-2 at year 2100, relative to pre-industrial conditions.
        RCPs are time-dependent, consistent projections of emissions and concentrations 
        of radiatively active gases and particles.
        </rationale>
    <Why>Provide estimate of future antrhopogenic climate change.</Why>
    <!-- Representative Concentration Pathway Experiment (2006-2100)
         * Initial conditions from 3.2::historical 
         * Radiative forcing stabilizes at ~4.5 W m-2 after 2100 wrt 3.1::pi-control
         (If ESM (Earth System Model), save CO2 fluxes from the surface 
          to calculate allowable emissions to compare to experiment 5.4) -->

    <!-- Initial Conditions -->
    <numericalRequirement xsi:type="InitialCondition">
        <description> Initial conditions are from experiment 3.2 </description>
        <id xsi:type="Identifier">4.1.ic</id>
    </numericalRequirement>

    <!-- Boundary/Forcing Conditions -->
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Imposed changing concentrations of RCP4.5 well mixed gases, including CO2</description>
        <id xsi:type="Identifier">4.1.bc.wmg.conc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Imposed changing concentrations of RCP4.5 short lived gas species </description>
        <id xsi:type="Identifier">4.1.bc.sls.conc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Imposed changing concentrations of RCP4.5 aerosols</description>
        <id xsi:type="Identifier">4.1.bc.aer.conc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Imposed changing concentrations of RCP4.5 aerosol precursors </description>
        <id xsi:type="Identifier">4.1.bc.aer_pre.conc</id>
    </numericalRequirement>    
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Imposed changing emissions of RCP4.5 well mixed gases, including CO2</description>
        <id xsi:type="Identifier">4.1.bc.wmg.em</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Imposed changing emissions of RCP4.5 short lived gas species</description>
        <id xsi:type="Identifier">4.1.bc.sls.em</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Imposed changing emissions of RCP4.5 aerosols </description>
        <id xsi:type="Identifier">4.1.bc.aer.em</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Imposed changing emissions of RCP4.5 aerosol precursors</description>
        <id xsi:type="Identifier">4.1.bc.aer_pre.em</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Imposed changing RCP4.5 land use</description>
        <id xsi:type="Identifier">4.1.bc.LandUse</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Imposed constant background volcanic aerosol may (or may not) be specified</description>
        <id xsi:type="Identifier">4.1.bc.aer_volc.conc</id>
    </numericalRequirement>

    <CalendarType>
        <realCalendar>
            <range>2006-2100</range>
        </realCalendar>
    </CalendarType>
    <requiredDuration xsi:type="ClosedDateRange">
        <startDate>2006-01-01T00:00:00Z</startDate>
        <endDate>2100-01-01T00:00:00Z</endDate>
        <lengthYears>94</lengthYears>
    </requiredDuration>
    <author>Charlotte Pascoe</author>
    <creationDate>2009-07-28T15:05:00Z</creationDate>
    <documentID xsi:type="Identifier">4.1_rcp4.5 </documentID>

</numericalExperiment>
